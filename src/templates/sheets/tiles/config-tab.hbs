<div
  class="{{ tabClass }} bd-tiles-tab"
  data-group="sheet"
  data-tab="bdtiles"
  data-application-part="bdtiles"
>
  <p class="notes">Tile Border</p>
  <div class="form-group">
    <label>Size</label>
    <div class="form-fields">
      <input
        type="number"
        name="flags.{{ moduleId }}.border.size"
        value="{{ borderFlag.size }}"
      />
    </div>
    <label>Alpha</label>
    <div class="form-fields">
      <input
        type="number"
        step="0.1"
        min="0"
        max="1"
        name="flags.{{ moduleId }}.border.alpha"
        value="{{ borderFlag.alpha }}"
      />
    </div>
  </div>
  <div class="form-group">
    <label>Color</label>
    <div class="form-fields">
      <input
        type="color"
        name="flags.{{ moduleId }}.border.color"
        value="{{ borderFlag.color }}"
      />
    </div>
  </div>
  <p class="notes">Tile Border</p>
  <div class="form-group">
    <label>
      <input type="checkbox" name="flags.{{ moduleId }}.ratio.lockRatio"
      {{#if ratioFlag.lockRatio}}checked{{/if}}
      /> Lock Aspect Ratio
    </label>
    <div class="form-fields">
      <label>Aspect Ratio</label>
      <input type="number" step="0.01" min="0.01" name="flags.{{
        moduleId
      }}.ratio.ratio" value="{{ ratioFlag.ratio }}"
      {{#if ratioFlag.lockRatio}}disabled{{/if}}
      />
    </div>
    <button
      type="button"
      data-tileid="{{ tile.id }}"
      class="bdtiles-reset-ratio"
    >
      Reset to Image Ratio
    </button>
  </div>
</div>
